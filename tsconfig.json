{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitOverride": true,
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@API/*": ["./src/API/*"],
      "@Errors/*": ["./src/Errors/*"],
      "@Types/*": ["./src/Types/*"]
    }
  },
  "exclude": ["node_modules", "out", "dist", ".vs/**/*"]
}
