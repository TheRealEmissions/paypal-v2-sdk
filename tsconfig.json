{
  "compilerOptions": {
    "target": "esnext",
    "module": "NodeNext",
    "moduleResolution": "Node",
    "lib": ["esnext"],
    "esModuleInterop": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitOverride": true,
    "declaration": true,
    "outDir": "./dist"
  },
  "exclude": ["node_modules", "out", "dist", ".vs/**/*"]
}
